{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "actions/*": [
        "app/actions/*"
      ],
      "reducers/*": [
        "app/reducers/*"
      ],
      "components/*": [
        "app/components/*"
      ],
      "lib/*": [
        "app/lib/*"
      ]
    }
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true,
    "useTranspileModule": true
  }
}